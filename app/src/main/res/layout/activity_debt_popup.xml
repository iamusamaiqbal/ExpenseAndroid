<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="310dp"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".debt_popup">


    <TextView
        android:id="@+id/popup_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Choose how to add Record
                                  to this Debt:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/popup_debt_linear_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/popup_id"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_select"/>
        <TextView
            android:id="@+id/popup_debt_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Record"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/popup_debt_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_debt_linear_2"
        android:text="to choose an existing Record
                                  to bind to the Debt"
        android:textAlignment="center"
        android:textSize="16sp" />
    <LinearLayout
        android:id="@+id/popup_debt_linear_3"
        android:layout_below="@+id/popup_debt_text_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"

            android:src="@drawable/ic_edit_popup"/>
        <TextView
            android:id="@+id/popup_debt_linear_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create new Record"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/popup_debt_linear_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_debt_linear_3"
        android:text="to repay or increase the
                                        Debt manually"
        android:textAlignment="center"
        android:textSize="16sp" />








  </RelativeLayout>